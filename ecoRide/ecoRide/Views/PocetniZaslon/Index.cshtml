@model IEnumerable<ecoRide.Models.Izvjestaj>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojPotrosenihKalorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UstedaNovca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmanjenjeEmisijeCO2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Korisnik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojPotrosenihKalorija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UstedaNovca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmanjenjeEmisijeCO2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Korisnik.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
